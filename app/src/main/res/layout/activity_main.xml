<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextMasa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Wpisz masÄ™ w kg"
        android:inputType="numberDecimal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextWzrost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Wpisz wzrost w metrach"
        android:inputType="numberDecimal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMasa" />

    <Button
        android:id="@+id/buttonOblicz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oblicz BMI"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextWzrost" />

    <TextView
        android:id="@+id/textViewWynik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wynik BMI"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOblicz" />

</androidx.constraintlayout.widget.ConstraintLayout>
